<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55555555"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_100"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_50"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/friend_background" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/ivFriendMore"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="@dimen/padding_10"
                            android:paddingTop="@dimen/padding_10"
                            android:src="@drawable/friend_more" />

                        <ImageView
                            android:id="@+id/ivPopClose"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:paddingRight="@dimen/padding_10"
                            android:paddingTop="@dimen/padding_10"
                            android:src="@drawable/friend_close" />
                    </RelativeLayout>
                </RelativeLayout>

                <com.weidi.view.CircleImageView
                    android:id="@+id/civPopHeadImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/circle_head_img" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10" >

                        <TextView
                            android:id="@+id/tvFriendName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好友昵称"
                            android:textSize="@dimen/text_size_18" />

                        <ImageView
                            android:id="@+id/ivFriendGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@id/tvFriendName"
                            android:src="@drawable/female" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="微迪号："
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/tvFriendWeidi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000221"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地区："
                            android:textColor="@color/text_color_deep"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tvFriendAddr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="深圳 罗湖"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个性签名："
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tvFriendSign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好友说今天天阴阿萨德发我是否阿萨德发送到"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_30"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_14"
                        android:layout_marginRight="@dimen/margin_14"
                        android:text="相册"
                        android:textSize="@dimen/text_size_14" />

                    <ImageView
                        android:id="@+id/ivFriendGralley1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/margin_5"
                        android:src="@drawable/icon_xiance" />

                    <ImageView
                        android:id="@+id/ivFriendGralley2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/margin_5"
                        android:src="@drawable/icon_xiance" />

                    <ImageView
                        android:id="@+id/ivFriendGralley3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/margin_5"
                        android:src="@drawable/icon_xiance" />

                    <ImageView
                        android:id="@+id/ivFriendGralley4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_xiance" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/tvSendMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_margin_gray"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_10"
                android:paddingTop="@dimen/padding_10"
                android:text="发消息"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tvSendVideo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_margin_gray"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_10"
                android:paddingTop="@dimen/padding_10"
                android:text="发视频"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>