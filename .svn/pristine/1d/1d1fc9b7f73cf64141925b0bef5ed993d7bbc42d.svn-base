<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/green"
                android:gravity="center" >

                <com.weidi.view.CircleImageView
                    android:id="@+id/civHeadImg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/circle_head_img" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" 
                        android:layout_marginTop="@dimen/margin_10">

                        <TextView
                            android:id="@+id/tvNickName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的昵称"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />

                        <ImageView
                            android:id="@+id/ivSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_toRightOf="@id/tvNickName"
                            android:layout_centerVertical="true"
                            android:src="@drawable/female" />

                        <TextView
                            android:id="@+id/tvSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8" 
                        android:layout_marginBottom="@dimen/margin_14">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="微迪号："
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/tvWeidi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000221"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <!-- <View
                        android:layout_width="200dp"
                        android:layout_height="0.1dip"
                        android:layout_marginTop="@dimen/margin_20"
                        android:background="@color/gray" /> -->
                </LinearLayout>

            </RelativeLayout>

       
          

            <RelativeLayout
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8" >

                        <TextView
                            android:id="@+id/lableAdr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地区："
                            android:textColor="@color/text_color_deep"
                            android:textSize="@dimen/text_size_18" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/lableAdr"
                            android:text="广东 深圳 罗湖"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_18" />

                        <ImageView
                            android:id="@+id/ivEditArea"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:layout_alignBottom="@id/tvAddress"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_toRightOf="@id/tvAddress" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8" >

                        <TextView
                            android:id="@+id/lableSign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个性签名："
                            android:textColor="@color/text_color_deep"
                            android:textSize="@dimen/text_size_18" />

                        <TextView
                            android:id="@+id/tvSign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/lableSign"
                            android:maxLength="9"
                            android:text="今天天晴"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_18" />

                        <ImageView
                            android:id="@+id/ivEditSign"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:layout_alignBottom="@id/tvSign"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_toRightOf="@id/tvSign" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_30"
                            android:gravity="center" >

                            <ImageView
                                android:id="@+id/ivGallery"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/me_gallery" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivGallery"
                                android:layout_centerHorizontal="true"
                                android:text="相册"
                                android:textColor="@color/text_color_deep"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_30"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/ivCollect"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/collect" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivCollect"
                                android:layout_centerHorizontal="true"
                                android:text="收藏"
                                android:textColor="@color/text_color_deep"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_30" >

                            <ImageView
                                android:id="@+id/ivWallet"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="@dimen/margin_14"
                                android:src="@drawable/wallet" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivWallet"
                                android:layout_centerHorizontal="true"
                                android:text="钱包"
                                android:textColor="@color/text_color_deep"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_30" >

                            <ImageView
                                android:id="@+id/ivQRcode"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/rqcode" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivQRcode"
                                android:layout_centerHorizontal="true"
                                android:text="二维码"
                                android:textColor="@color/text_color_deep"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
       <include layout="@layout/wheel_address" />
        <include layout="@layout/change_user_info" />
    </RelativeLayout>

</ScrollView>