<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/luo_win_base" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/luo_win_base" >

            <RelativeLayout
                android:id="@+id/page1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/me_bg"
                android:gravity="center" >

                <RelativeLayout
                    android:id="@+id/rlTop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_top_bar"
                    android:layout_alignParentTop="true" >

                    <TextView
                        android:id="@+id/topTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="个人中心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20" />

                    <LinearLayout
                        android:id="@+id/llTopRight"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_common"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:background="@drawable/btn_msg_menu"
                            android:gravity="center" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlTop"
                    android:layout_marginTop="@dimen/margin_20" >

                    <FrameLayout
                        android:id="@+id/flHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/out_side_nomal" />

                        <com.weidi.view.CircleImageView
                            android:id="@+id/civHeadImg"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/head_ic" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="上传头像"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:visibility="gone" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toRightOf="@id/flHead"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tvNickName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="我的昵称"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18" />

                            <ImageView
                                android:id="@+id/ivMeSex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/tvNickName"
                                android:layout_marginBottom="3dp"
                                android:layout_toRightOf="@id/tvNickName"
                                android:paddingLeft="5dp"
                                android:paddingRight="@dimen/padding_10"
                                android:src="@drawable/male_ic" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微迪号："
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12" />

                            <TextView
                                android:id="@+id/tvWeidi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000221"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/vip"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/vip_bg"
                                android:gravity="center"
                                android:text="靓"
                                android:textColor="@color/yellow"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/margin_8"
                                android:background="@drawable/vip_dear"
                                android:gravity="center"
                                android:text="年"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/margin_8"
                                android:src="@drawable/vip_ic_false" />

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/margin_8"
                                android:background="@drawable/vip_dear"
                                android:gravity="center"
                                android:text="证"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llBarcode"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@drawable/me_barcode_selector"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="@dimen/padding_5"
                            android:src="@drawable/me_barcode" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="#30000000" >

                    <RelativeLayout
                        android:id="@+id/rlSign"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" >

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/margin_10"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tvIsSign"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="每日签到"
                                    android:textColor="@color/text_color_deep"
                                    android:textSize="@dimen/text_size_12" />
                            </LinearLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvRegistrat"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/bg_registration"
                            android:gravity="center"
                            android:text="+1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_20" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/rlSign"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/llOver"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0."
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_14" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="帐号余额"
                                android:textColor="#E2E2E2"
                                android:textSize="@dimen/text_size_12" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#258B25" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvIntegral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当前点数"
                                android:textColor="#E2E2E2"
                                android:textSize="@dimen/text_size_12" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/page1"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/rlMeGallerys"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/btn_list_item_bg" >

                        <ImageView
                            android:id="@+id/ivGallery"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/me_gallery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@+id/ivGallery"
                            android:text="相册"
                            android:textColor="@color/text_color_deep"
                            android:textSize="@dimen/text_size_16" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:background="@color/base_bg" />

                    <RelativeLayout
                        android:id="@+id/rlMeCollotions"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/btn_list_item_bg" >

                        <ImageView
                            android:id="@+id/ivMeColloction"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/me_colletion" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@+id/ivMeColloction"
                            android:text="收藏"
                            android:textColor="@color/text_color_deep"
                            android:textSize="@dimen/text_size_16" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlMeWallet"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/btn_list_item_bg" >

                    <ImageView
                        android:id="@+id/ivMeWallet"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@drawable/me_wallet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toRightOf="@+id/ivMeWallet"
                        android:text="微迪红包"
                        android:textColor="@color/text_color_deep"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMeSetting"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/btn_list_item_bg" >

                    <ImageView
                        android:id="@+id/ivMeCode"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@drawable/mesetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toRightOf="@+id/ivMeCode"
                        android:text="设置"
                        android:textColor="@color/text_color_deep"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvSignAinm"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_registration"
                android:gravity="center"
                android:text="+1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>