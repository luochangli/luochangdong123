<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/luo_win_base"
        android:orientation="vertical" >

        <include layout="@layout/top_luo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:text="头像"
                android:textColor="@color/text_color_deep"
                android:textSize="@dimen/text_size_18" />

            <com.weidi.view.CircleImageView
                android:id="@+id/ivInfoHead"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20"
                android:src="@drawable/circle_head_img" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlInfoNick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item"
                android:background="@drawable/btn_list_item_bg" >

                <TextView
                    android:id="@+id/tvLable1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="        昵称："
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/tvInfoNick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@id/tvLable1"
                    android:text="我的昵称"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:src="@drawable/info_entry" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rlSexEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item"
                android:background="@drawable/btn_list_item_bg" >

                <TextView
                    android:id="@+id/tvLable2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="        性别："
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/tvInfoSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@id/tvLable2"
                    android:text="男"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:src="@drawable/info_entry" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rlAdrEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item"
                android:background="@drawable/btn_list_item_bg" >

                <TextView
                    android:id="@+id/tvLable3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="        地区："
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/tvInfoAdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@id/tvLable3"
                    android:text="深圳市 罗湖区"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:src="@drawable/info_entry" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rlSignEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item"
                android:background="@drawable/btn_list_item_bg" >

                <TextView
                    android:id="@+id/tvLable4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="个性签名："
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/tvInfoSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@id/tvLable4"
                    android:text="今天天阴"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:src="@drawable/info_entry" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/btn_list_item_bg" >

            <TextView
                android:id="@+id/tvLable5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:text="设置"
                android:textColor="@color/text_color_deep"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/padding_20"
                android:paddingRight="@dimen/padding_20"
                android:src="@drawable/info_entry" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/wheel_address" />

</RelativeLayout>