<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_base" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.weidi.view.CircleImageView
                android:id="@+id/civHeadImg"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_female" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_toRightOf="@id/civHeadImg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvNick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好友昵称"
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tvAdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="广东 深圳"
                    android:textColor="@color/text_color_light"
                    android:textSize="13dp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp" >
            <ImageView
                android:id="@+id/ivMeBarcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="扫扫上面的二维码，加我微迪"
            android:textColor="@color/text_color_light"
            android:textSize="13dp" />
    </LinearLayout>

</RelativeLayout>