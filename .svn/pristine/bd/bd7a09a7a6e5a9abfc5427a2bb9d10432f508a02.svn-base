<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar" 
            android:background="@color/green_bg">

            <TextView
                android:id="@+id/topTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

            <LinearLayout
                android:id="@+id/llTopRight"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_common"
                android:gravity="center" >

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_msg_menu"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_notice"
            android:layout_width="match_parent"
            android:layout_height="65dp" >

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp" >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/notice3x" />

                <TextView
                    android:id="@+id/red_shot"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:background="@drawable/tip_pop_red"
                    android:gravity="center"
                    android:text="1"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/frame"
                android:text="微迪公告"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llbar" >

        <com.weidi.view.CustomListView
            android:id="@+id/lv_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whites"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#70CDCDCD"
            android:dividerHeight="0.5dp"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:listSelector="@drawable/list_item_selector" />

        <TextView
            android:id="@+id/tvNoMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无聊天消息"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>