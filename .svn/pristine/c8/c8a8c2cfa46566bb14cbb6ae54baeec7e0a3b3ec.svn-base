<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#E0E0E0"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:text="A"
        android:textColor="@color/text_color_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="8dip" >

        <com.weidi.view.CircleImageView
            android:id="@+id/iv_head_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/default_useravatar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/iv_head_img"
            android:text="微迪客服"
            android:textColor="@color/text_color_deep"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vip"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_head_img"
            android:layout_toRightOf="@id/title"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/vip_bg"
            android:gravity="center"
            android:text="靓"
            android:visibility="gone"
            android:textColor="@color/yellow"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>