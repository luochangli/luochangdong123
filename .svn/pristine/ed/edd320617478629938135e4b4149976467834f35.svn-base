<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/buttombar" >

    <LinearLayout
        android:id="@+id/llbuttom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_2x"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/buttom_news"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ivTabMsg"
                    style="@style/ButtomBarImgBtn"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_icon_news_normal" />

                <TextView
                    android:id="@+id/tv_newmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:background="@drawable/skin_tips_newmessage"
                    android:gravity="center"
                    android:text="99+"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvTabMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息"
                android:textColor="@color/text_tab_buttom"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttom_constact"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/ivTabConstant"
                    style="@style/ButtomBarImgBtn"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_icon_contact_normal" />

                <TextView
                    android:id="@+id/notiConstact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:background="@drawable/skin_tips_newmessage"
                    android:gravity="center"
                    android:text="99+"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvTabConstant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textColor="@color/text_tab_buttom"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttom_setting"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivTabMe"
                style="@style/ButtomBarImgBtn"
                android:layout_gravity="center"
                android:background="@drawable/tab_icon_me_normal" />

            <TextView
                android:id="@+id/tvTabMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/text_tab_buttom"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible" >

            <ImageView
                style="@style/ButtomBarImgBtn"
                android:layout_gravity="center"
                android:background="@drawable/tab_icon_me_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>



        <ImageView
            android:id="@+id/image_window_more"
            android:layout_width="65dp"
            android:layout_height="65dp"
             android:layout_alignBottom="@id/llbuttom"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_alignParentRight="true"
            android:src="@drawable/window_more_new" />


</RelativeLayout>