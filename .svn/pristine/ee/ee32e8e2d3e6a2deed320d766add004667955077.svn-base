<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

   
    <RelativeLayout 
        android:layout_width="35dp"
        android:layout_height="71dp"
        android:id="@+id/re_time">
        
        <TextView 
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
            android:text="时间"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="#b3b3b3"
          />
        
    </RelativeLayout>
    
<RelativeLayout 
    android:id="@+id/re_img"
    android:layout_width="15dp"
    android:layout_height="71dp"
    
>
    
    <TextView
        android:id="@+id/tv_shu1"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="#e6e6e6"
        android:layout_centerHorizontal="true"
        />
    
    <com.weidi.view.CircleImageView 
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/tv_shu1"
    android:id="@+id/img"
    android:background="@drawable/huisequan"/>

  <TextView
        android:id="@+id/tv_shu2"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_below="@+id/img"
        android:background="#e6e6e6"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/re_notice"
   
    >
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="71dp" 
        android:id="@+id/re_content">
        <TextView  
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="详情请留意官网"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:id="@+id/title"
           android:textColor="#ff5400"
            
            android:ellipsize="end"
            android:maxLines="1"
            />
        
         <TextView  
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/title"
            android:text="内容"
            android:id="@+id/content"
            android:ellipsize="end"
            android:textColor="#464646"
            android:textSize="14sp"
            android:maxLines="2"/>
         
         <View android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#e6e6e6"
             android:layout_below="@+id/content"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/re_content">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#e6e6e6"
            android:gravity="center"
            android:text=">"
            />
    </RelativeLayout>
</RelativeLayout>

</LinearLayout>
