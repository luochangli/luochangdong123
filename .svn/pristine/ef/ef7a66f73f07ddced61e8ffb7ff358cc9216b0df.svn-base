package com.weidi.activity;

import org.jivesoftware.smack.packet.Presence;
import org.jivesoftware.smack.packet.Presence.Type;
import org.jivesoftware.smackx.pubsub.PresenceState;

import com.weidi.QApp;
import com.weidi.R;
import com.weidi.chat.ChatGroupOrder;

import android.app.Activity;
import android.os.Bundle;
import android.view.View;

public class TestGroupChatActivity extends Activity{

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		// TODO Auto-generated method stub
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_groupchat);
	}
	public void done(View view){
		switch (view.getId()) {
		case R.id.button1:
			ChatGroupOrder.getInstance().mucChangNick("g10193@conference.jsmny","bbbb"); 
		break;
		case R.id.button2:
			ChatGroupOrder.getInstance().mucChangInfo("g10193@conference.jsmny","ggg","jjj");
		break;
		case R.id.button3:
			ChatGroupOrder.getInstance().createMUCRoom("AAAA","BBBB","CCCC");
		break;
		case R.id.button4:
			ChatGroupOrder.getInstance().mucDestroy("g10193@conference.jsmny");
		break;
		case R.id.button6:
			ChatGroupOrder.getInstance().mucExit("g10193@conference.jsmny");
		break;
		case R.id.button5:
			ChatGroupOrder.getInstance().mucKick("g10193@conference.jsmny","1000264@jsmny");
		break;
		case R.id.button7:
			ChatGroupOrder.getInstance().mucAddmember("g10193@conference.jsmny","1000264@jsmny","hutailang");
		break; 
		case R.id.button8:
			ChatGroupOrder.getInstance().obtainMUCGetmember("g10013@conference.jsmny");
		break;
		case R.id.button9:
			sendPresence();
		break;
		default:
			break;
		}
	}
	
	public void sendPresence(){
		Presence sendpresence=new Presence(Type.available);
		sendpresence.setTo("g10187@conference.jsmny/1000261");
		sendpresence.setFrom("1000261@jsmny");
		QApp.xmppConnection.sendPacket(sendpresence);
	}
	
}
