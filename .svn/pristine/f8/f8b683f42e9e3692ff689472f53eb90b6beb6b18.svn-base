<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/luo_win_base" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/luo_win_base"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/me_bg"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_top_bar" >

                    <TextView
                        android:id="@+id/topTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="个人中心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20" />

                    <LinearLayout
                        android:id="@+id/llTopRight"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_common"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:background="@drawable/btn_msg_menu"
                            android:gravity="center" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="82dp"
                    android:src="@drawable/out_side_nomal" />

                <com.weidi.view.CircleImageView
                    android:id="@+id/civHeadImg"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="87dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_female" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10" >

                        <TextView
                            android:id="@+id/tvNickName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="我的昵称"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />

                        <ImageView
                            android:id="@+id/ivMeSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_toRightOf="@id/tvNickName"
                            android:src="@drawable/female" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="微迪号："
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/tvWeidi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000221"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBarcode"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/me_barcode_selector"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="@dimen/padding_5"
                        android:src="@drawable/me_barcode" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEntry"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_40"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/me_barcode_selector"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="@dimen/padding_5"
                        android:src="@drawable/me_entry" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/rlMeGallerys"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/btn_list_item_bg" >

                        <ImageView
                            android:id="@+id/ivGallery"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/me_gallery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@+id/ivGallery"
                            android:text="相册"
                            android:textColor="@color/text_color_deep"
                            android:textSize="@dimen/text_size_16" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:background="@color/base_bg" />

                    <RelativeLayout
                        android:id="@+id/rlMeCollotions"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/btn_list_item_bg" >

                        <ImageView
                            android:id="@+id/ivMeColloction"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/me_colletion" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@+id/ivMeColloction"
                            android:text="收藏"
                            android:textColor="@color/text_color_deep"
                            android:textSize="@dimen/text_size_16" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlMeWallet"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/btn_list_item_bg" >

                    <ImageView
                        android:id="@+id/ivMeWallet"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@drawable/me_wallet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toRightOf="@+id/ivMeWallet"
                        android:text="微迪红包"
                        android:textColor="@color/text_color_deep"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMeSetting"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/btn_list_item_bg" >

                    <ImageView
                        android:id="@+id/ivMeCode"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@drawable/mesetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toRightOf="@+id/ivMeCode"
                        android:text="设置"
                        android:textColor="@color/text_color_deep"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>