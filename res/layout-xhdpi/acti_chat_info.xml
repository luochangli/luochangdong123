<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/luo_win_base"
    android:orientation="vertical" >

    <include layout="@layout/top_luo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:orientation="vertical" >

            <com.weidi.view.CircleImageView
                android:id="@+id/ivUserHead"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_female" />

            <TextView
                android:id="@+id/tvNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivUserHead"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="昵称"
                android:textColor="@color/text_color_deep"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/icon_btn_addperson" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_switch_chattotop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="置顶聊天"
            android:textColor="@color/text_color_deep"
            android:textSize="16sp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/iv_switch_chattotop"
            android:layout_width="70dp"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/open_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_switch_unchattotop"
            android:layout_width="70dp"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/close_icon"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/rl_switch_block_groupmsg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="消息免打扰"
            android:textColor="@color/text_color_deep"
            android:textSize="16sp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/iv_switch_block_groupmsg"
            android:layout_width="70dp"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/open_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_switch_unblock_groupmsg"
            android:layout_width="70dp"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/close_icon"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="设置当前聊天背景"
            android:textColor="@color/text_color_deep"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="查询聊天记录"
            android:textColor="@color/text_color_deep"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="清空聊天记录"
            android:textColor="@color/text_color_deep"
            android:textSize="16sp" />
    </RelativeLayout>

  
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="举报"
            android:textColor="@color/text_color_deep"
            android:textSize="16sp" />
    </RelativeLayout>

 


</LinearLayout>