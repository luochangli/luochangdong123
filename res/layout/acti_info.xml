<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/luo_win_base" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/me_bg"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_bar" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/topLeft"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_common"
                        android:padding="@dimen/padding_10"
                        android:src="@drawable/top_back" />

                    <TextView
                        android:id="@+id/topTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="好友信息"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTopRight"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_common"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@drawable/btn_msg_menu"
                        android:gravity="center" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="82dp"
                android:src="@drawable/out_side_nomal" />

            <com.weidi.view.CircleImageView
                android:id="@+id/civHeadImg"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="87dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_female" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_15"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10" >

                    <TextView
                        android:id="@+id/tvNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="我的昵称"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:id="@+id/ivMeSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_toRightOf="@id/tvNickName"
                        android:src="@drawable/female" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微迪号："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tvWeidi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000221"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlAdrEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item"
                android:background="@drawable/btn_list_item_bg" >

                <TextView
                    android:id="@+id/tvLable3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="地区："
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tvInfoAdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@id/tvLable3"
                    android:text="深圳市 罗湖区"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:src="@drawable/info_entry"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rlSignEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_list_item_bg" >

                <TextView
                    android:id="@+id/tvLable4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="签名："
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tvInfoSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tvLable4"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_toRightOf="@id/tvLable4"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="3"
                    android:paddingBottom="@dimen/padding_15"
                    android:text="今天天阴阿莱克斯大家分厘卡就算了戴假发两款手机登陆开房间阿斯利康戴假发绿卡时间的分速度来看房价松动"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:src="@drawable/info_entry"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_15" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/margin_15"
                android:text="相册 :"
                android:textColor="@color/text_color_deep"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/label1"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toRightOf="@id/label1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#cccccc" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_weight="1"
                    android:background="#cccccc" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:background="#cccccc" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/llSendBtn"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/btnSendMsg"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_weight="1"
                    android:background="@drawable/btn_common_selector"
                    android:gravity="center"
                    android:text="发消息"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <TextView
                    android:id="@+id/btnSendVideo"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:background="@drawable/btn_send_video_selector"
                    android:gravity="center"
                    android:text="发视频"
                    android:textColor="@color/green_bg"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_alignTop="@id/llSendBtn"
                android:background="@color/gray" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>