<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_base"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_14"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/margin_14"
            android:text="性别"
            android:textColor="@color/text_color_deep"
            android:textSize="@dimen/text_size_16" />

        <RadioGroup
            android:id="@+id/sexGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/base_bg" />

            <RadioButton
                android:id="@+id/manRadio"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                android:button="@null"
                android:drawableRight="@drawable/rbtn_sex_selector"
                android:paddingLeft="10dp"
                android:text="男"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@color/base_bg" />

            <RadioButton
                android:id="@+id/womanRadio"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                android:button="@null"
                android:drawableRight="@drawable/rbtn_sex_selector"
                android:paddingLeft="10dp"
                android:text="女"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_14" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>